<% if flash[:notice] %>
    <p class="notice_color"><%= flash[:notice] %></p>
<% end %>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><span><%= book.title %></span></td>
      <td><span><%= book.body %></span></td>
      <td>
        <span>
          <%= link_to 'Show', book_path(book.id) %>
        </span>
      </td>
      <td>
        <span>
          <%= link_to 'Edit', edit_book_path(book.id) %>
        </span>
      </td>
      <td>
        <span>
          <%= link_to 'Destroy', destroy_todolist_path(book.id),method: :delete,"data-confirm" => "本当に削除しますか？" %>
        </span>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>

<h2>New book</h2>

<% if @book.errors.any? %>
  <%if @book.errors.count == 1 %>

    <div id="error_explanation">
      <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>

  <% else %>

    <div id="error_explanation">
      <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>

  <% end %>
<% end %>

<%= form_with model: @book, url:books_path,local:true do |f| %>

  <div class="field">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body, "Body" %>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>

